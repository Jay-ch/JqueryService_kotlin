<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
    android:id="@+id/close"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:clickable="true"
    android:gravity="center"
    android:padding="@dimen/dp_10"
    android:text="@string/password_change"
    android:textColor="@color/c_55"
    android:textSize="@dimen/dp_16" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:clickable="true"
        android:gravity="center"
        android:padding="@dimen/dp_6"
        android:text="@string/password_change_hint"
        android:textColor="@color/c_55"
        android:textSize="@dimen/dp_16" />

    <View
        android:id="@+id/h_line"
        style="@style/horizontal_line" />


    <com.jquery.service.android.widgets.ClearEditText
        android:id="@+id/edt_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_6"
        android:background="@drawable/search_tv_bg"
        android:hint="@string/enter_password_hint"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:padding="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12"
        android:singleLine="true"
        android:textColor="@color/c_86"
        android:textColorHint="@color/c_99"
        android:textSize="@dimen/dp_14" />

    <View style="@style/horizontal_line" />

    <com.jquery.service.android.widgets.ClearEditText
        android:id="@+id/edt_again_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_6"
        android:background="@drawable/search_tv_bg"
        android:hint="@string/again_enter_password_hint"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:padding="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12"
        android:singleLine="true"
        android:textColor="@color/c_86"
        android:textColorHint="@color/c_99"
        android:textSize="@dimen/dp_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_ff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/dialog_black_bg"
            android:clickable="true"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="@string/save"
            android:textColor="@color/c_ff"
            android:textSize="@dimen/dp_14" />

        <View
            android:id="@+id/line"
            style="@style/vertical_line" />
    </LinearLayout>


</LinearLayout>