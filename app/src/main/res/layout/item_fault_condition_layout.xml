<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingStart="@dimen/dp_16"
              android:paddingTop="@dimen/dp_12"
              android:paddingBottom="@dimen/dp_12"
              android:orientation="horizontal">


    <TextView
        android:id="@+id/tv_item_condition_name"
        android:layout_width="@dimen/dp_60"
        style="@style/Text_13dp_c_99"
        android:layout_gravity="start|center_vertical"
        android:text="张麻子"/>

    <ProgressBar
        android:layout_width="0dp"
        android:id="@+id/pb_item_fault_condition"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_height="@dimen/dp_16"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:progress="99"
        android:progressDrawable="@drawable/progressbar_drawables"
        />


    <TextView
        android:id="@+id/tv_item_condition_num"
        android:layout_width="@dimen/dp_35"
        style="@style/Text_11dp_c_33"
        android:layout_marginEnd="@dimen/dp_16"
        android:text="10000"/>

</LinearLayout>