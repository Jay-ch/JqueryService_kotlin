<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_ff"
    android:orientation="vertical">

    <com.jquery.service.android.widgets.TopTitleBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:title="@string/login" />

    <LinearLayout
        android:id="@+id/layout_choose_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_30"
        android:clickable="true"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_16"
            android:src="@drawable/icon_choose_country" />

        <TextView
            android:id="@+id/tv_country_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/china"
            android:textColor="@color/c_33"
            android:textSize="@dimen/dp_14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_title"
        android:clickable="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"

            android:layout_marginTop="@dimen/dp_36"
            android:text="@string/app_login_wellcome"
            android:textColor="@color/c_ff"
            android:textSize="@dimen/dp_16"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_12"
            android:text="@string/tv_synergy_account_hint"
            android:textColor="@color/c_ff"
            android:textSize="@dimen/dp_12" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_30"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/tv_account"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_49"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_weight="1.0"
            android:background="@null"
            android:drawablePadding="@dimen/dp_10"
            android:hint="@string/hint_account"
            android:maxLines="1"
            android:textColor="@color/c_55"
            android:textColorHint="@color/c_99"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:id="@+id/tv_del_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/small_delete"
            android:drawablePadding="@dimen/dp_2"
            android:paddingBottom="@dimen/dp_2"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_2"
            android:textColor="@color/c_55"
            android:textSize="@dimen/dp_16" />
    </LinearLayout>


    <View
        style="@style/horizontal_line"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_49"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/tv_password"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/hint_password"
                android:inputType="textPassword"
                android:maxLength="20"
                android:maxLines="1"
                android:textColor="@color/c_55"
                android:textColorHint="@color/c_99"
                android:textSize="@dimen/dp_14" />
        </LinearLayout>


        <CheckBox
            android:id="@+id/box_eye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/selector_eyes_layout"
            android:button="@null"
            android:checked="false"
            android:paddingBottom="@dimen/dp_2"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_2" />
    </LinearLayout>


    <View
        style="@style/horizontal_line"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_4" />


    <Button
        android:id="@+id/tv_loginBtn"
        style="@style/OrangeComButton"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_53"
        android:text="@string/login" />

    <TextView
        android:id="@+id/tv_forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/dp_22"
        android:layout_marginRight="@dimen/dp_22"
        android:padding="@dimen/dp_12"
        android:text="@string/forget_password"
        android:textColor="@color/c_55"
        android:textSize="@dimen/dp_10" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_phone_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="@dimen/dp_12"
            android:text="@string/phone_register"
            android:textColor="@color/c_55"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:id="@+id/tv_retrieve_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dp_12"
            android:text="@string/retrieve_password"
            android:textColor="@color/c_55"
            android:textSize="@dimen/dp_14" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_20"
        android:gravity="bottom|center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_wx_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/dp_10"
            android:drawableTop="@drawable/selctor_wx_bg"
            android:gravity="center"
            android:text="@string/wx_login"
            android:textColor="@color/c_55"
            android:textSize="@dimen/dp_12"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>