<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="@dimen/dp_85"
        android:layout_height="@dimen/dp_85"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/fiv"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@color/color_f6" />
        <!-- <ImageView
             android:id="@+id/fiv"
             android:layout_width="80dp"
             android:layout_height="80dp"
             android:scaleType="centerCrop"
             android:src="@color/color_f6" />-->
        <LinearLayout
            android:id="@+id/ll_add"
            android:layout_width="@dimen/dp_85"
            android:layout_height="@dimen/dp_85"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_dashed_rectangle"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_upload_documents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="@dimen/dp_4"
                android:text="@string/upload_documents"
                android:textColor="@color/c_99"
                android:textSize="@dimen/dp_10" />
            <!--  android:src="@color/color_f6"-->
            <!-- <ImageView
                 android:layout_width="@dimen/dp_50"
                 android:layout_height="@dimen/dp_50"
                 android:layout_gravity="center"
                 android:scaleType="centerCrop"
                 android:src="@color/color_f6" />-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/fault_detail_add" />

            <TextView
                android:id="@+id/tv_upload_documents_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|bottom"
                android:paddingBottom="@dimen/dp_10"
                android:paddingTop="@dimen/dp_4"
                android:text="@string/upload_documents_hint"
                android:textColor="@color/c_99"
                android:textSize="@dimen/dp_10" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_del"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_35"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/delet_zhaopian_1x" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_5"
            android:background="@drawable/buybuybuy"
            android:drawableLeft="@drawable/video_icon"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_5"
            android:paddingTop="@dimen/dp_8"
            android:text="00:00"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_11"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>