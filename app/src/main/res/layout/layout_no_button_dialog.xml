        android:text="常见解决方案"
        android:textColor="@color/c_55"
        android:textSize="@dimen/dp_14" />

    <com.jquery.service.android.widgets.JustifyTextView
        android:id="@+id/tv_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
