<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.jquery.operations.widgets.springmenu.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp" />
    <!-- <ScrollView
         android:layout_width="match_parent"
         android:layout_height="match_parent"><ScrollView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"></ScrollView>-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_tab_height"
        android:background="@color/c_ff"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/back_blue"
            android:drawablePadding="@dimen/dp_6"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:textColor="@color/c_0042ff"
            android:textSize="@dimen/dp_14"
            android:visibility="visible" />

        <TextView
            android:id="@+id/include_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:maxEms="12"
            android:singleLine="true"
            android:text="@string/pay_ic_card"
            android:textColor="@color/c_33"
            android:textSize="@dimen/dp_18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_right_f"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:drawableLeft="@drawable/back_blue"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:textSize="@dimen/dp_16" />

        <ImageView
            android:id="@+id/img_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_12"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_gravity="bottom"
            android:background="@color/c_e5" />

    </FrameLayout>

    <com.bigkoo.convenientbanner.ConvenientBanner
        android:id="@+id/vp_item_goods_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_230"
        android:visibility="gone"
        app:autoTurningTime="2000"
        app:canLoop="true" />

    <com.youth.banner.Banner xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200" />

    <View style="@style/horizontal_line" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/iv_login"
                style="@style/button_blue_frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/dp_10"
                android:text="@string/login"
                android:textColor="@color/c_ff"
                android:textSize="@dimen/dp_16" />

            <TextView
                android:id="@+id/iv_read_card"
                style="@style/button_blue_frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@id/iv_login"
                android:padding="@dimen/dp_10"
                android:text="@string/click_read_ic_card"
                android:textColor="@color/c_ff"
                android:textSize="@dimen/dp_16" />

            <TextView
                android:id="@+id/tv_scan_qrcode"
                style="@style/button_blue_frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@id/iv_read_card"
                android:padding="@dimen/dp_10"
                android:text="@string/click_scan_qrcode"
                android:textColor="@color/c_ff"
                android:textSize="@dimen/dp_15" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_charts"
            style="@style/button_blue_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:padding="@dimen/dp_10"
            android:text="@string/charts"
            android:textColor="@color/c_ff"
            android:textSize="@dimen/dp_15" />
        <TextView
            android:id="@+id/tv_charts_demo"
            style="@style/button_blue_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:padding="@dimen/dp_10"
            android:text="@string/charts"
            android:textColor="@color/c_ff"
            android:textSize="@dimen/dp_15" />

        <TextView
            android:id="@+id/tv_charts_demo_one"
            style="@style/button_blue_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:padding="@dimen/dp_10"
            android:text="@string/charts_one"
            android:textColor="@color/c_ff"
            android:textSize="@dimen/dp_15" />
    </LinearLayout>


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_scan_qrcode"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:text="EnableFade"
        android:textColor="#000"
        android:visibility="gone" />

    <RadioGroup
        android:id="@+id/rg_enablefade"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:orientation="horizontal"
        android:visibility="gone">

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:checked="true"
            android:text="Enable" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Disable" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/rg_enablefade"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:text="rebound"
        android:textColor="#000"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_tension"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView4"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Tension"
        android:visibility="gone" />

    <SeekBar
        android:id="@+id/sb_tension"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_tension"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:max="100"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_friction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sb_tension"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Friction"
        android:visibility="gone" />

    <SeekBar
        android:id="@+id/sb_friction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_friction"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sb_friction"
        android:layout_alignStart="@+id/sb_friction"
        android:layout_below="@+id/sb_friction"
        android:layout_marginTop="20dp"
        android:text="ignoreView"
        android:textColor="#000"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_ignore"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="10dp"
        android:background="@drawable/normal3"
        android:visibility="gone" />


</LinearLayout>
