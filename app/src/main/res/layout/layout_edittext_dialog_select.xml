<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_height="200dp"
              style="@style/LinearLayoutCommonDialog">

    <TextView
        android:id="@+id/tv_input_dialog_title"
        style="@style/DialogTitleText"
        android:text="AAA AAA AAA AAA AAA "
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal"
        >


        <EditText
            android:id="@+id/et_input_dialog_edit_a"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            style="@style/InfraredEditTextNumber"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."/>

        <EditText
            android:id="@+id/et_input_dialog_edit_b"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            style="@style/InfraredEditTextNumber"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."/>

        <EditText
            android:id="@+id/et_input_dialog_edit_c"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            style="@style/InfraredEditTextNumber"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."/>

        <EditText
            android:id="@+id/et_input_dialog_edit_d"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            style="@style/InfraredEditTextNumber"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_15">

        <Button
            android:id="@+id/tv_input_dialog_left"
            style="@style/ComDialogButton"
            android:text="@string/cancel"
            />

        <Button
            android:id="@+id/tv_input_dialog_right"
            style="@style/ComDialogButton"
            android:layout_marginLeft="@dimen/dp_45"
            android:text="@string/save"
            />
<!--@string/save-->
    </LinearLayout>


</LinearLayout>