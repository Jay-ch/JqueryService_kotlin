<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_height="200dp"
              style="@style/LinearLayoutCommonDialog">

    <TextView
        android:id="@+id/tv_csd_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/dp_14"
        android:text="Do you really want to quit?"
        android:textColor="@color/text_33"
        android:textSize="@dimen/dp_18"
        />

    <RadioGroup
        android:id="@+id/rg_csd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_csd_prepay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@drawable/radio_btn_style"
            android:paddingStart="@dimen/dp_5"
            android:text="@string/about"
            android:textColor="@color/text_33"
            android:textSize="@dimen/dp_15"/>

        <View
            android:layout_width="@dimen/dp_32"
            android:layout_height="1dp"/>

        <RadioButton
            android:id="@+id/rb_csd_postpaid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@drawable/radio_btn_style"
            android:paddingStart="@dimen/dp_5"
            android:text="@string/about"
            android:textColor="@color/c_55"
            android:textSize="@dimen/dp_15"/>


    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_25"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_csd_left"
            style="@style/ComDialogButton"
            android:text="@string/cancel"
            />

        <Button
            android:id="@+id/btn_csd_right"
            style="@style/ComDialogButton"
            android:layout_marginLeft="@dimen/dp_30"
            android:enabled="false"
            android:text="@string/sure"
            />

    </LinearLayout>


</LinearLayout>