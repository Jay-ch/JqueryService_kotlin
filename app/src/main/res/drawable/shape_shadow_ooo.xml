<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:left="@dimen/dp_4" android:top="@dimen/dp_4">
                <shape>
                    <solid android:color="@color/c_f5" />
                    <corners android:radius="@dimen/dp_37" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <!-- SHADOW LAYER -->
            <item android:left="@dimen/dp_4" android:top="@dimen/dp_4">
                <shape>
                    <solid android:color="@color/c_f5" />
                    <corners android:radius="@dimen/dp_37" />
                </shape>
            </item>
            <!-- CONTENT LAYER -->
            <item android:bottom="@dimen/dp_4" android:right="@dimen/dp_4">
                <shape>
                    <solid android:color="@color/yellow_alpha_3" />
                    <corners android:radius="@dimen/dp_37" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>