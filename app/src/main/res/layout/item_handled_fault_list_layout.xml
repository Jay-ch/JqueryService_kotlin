<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_handled_fault"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/c_f8"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/c_ff"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_handled_fault"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:drawableLeft="@drawable/fault_detail_location"
            android:drawablePadding="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_15"
            android:paddingTop="@dimen/dp_15"
            android:text="渝北xxxxxxxx"
            android:textColor="@color/c_33"
            android:textSize="@dimen/dp_13"
            android:textStyle="bold"
            android:visibility="visible" />

        <View
            style="@style/horizontal_line"
            android:layout_marginLeft="@dimen/dp_15" />

        <LinearLayout
            android:id="@+id/layout_test_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:background="@drawable/white_grey_btn"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/c_ff"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_14"
                android:paddingTop="@dimen/dp_14">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/rl_list_comm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_list_comm"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="wrap_content"
                            android:textColor="@color/c_55"
                            android:textSize="@dimen/dp_9"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/tv_list_comm_perch"
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="wrap_content"
                            android:textColor="@color/c_55"
                            android:textSize="@dimen/dp_9"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/ll_list_comm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/rl_list_comm"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_list_comm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_3"
                            android:layout_marginRight="@dimen/dp_3"
                            android:src="@drawable/home_recent_working_status"
                            android:textColor="@color/c_55" />

                        <View
                            android:layout_width="@dimen/dp_1"
                            android:layout_height="@dimen/dp_20"
                            android:layout_gravity="center"
                            android:background="@color/c_ff42" />

                        <ImageView
                            android:id="@+id/iv_end_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_3"
                            android:layout_marginRight="@dimen/dp_3"
                            android:src="@drawable/home_recent_working_status"
                            android:textColor="@color/c_55" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/ll_list_comm"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_end_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="完结时间：.11.12  10:46:45"
                            android:textColor="@color/c_55"
                            android:textSize="@dimen/dp_10"
                            android:textStyle="bold"
                            android:visibility="visible" />

                        <View
                            android:layout_width="@dimen/dp_1"
                            android:layout_height="@dimen/dp_20"
                            android:layout_gravity="center"
                            android:background="@color/c_ff" />

                        <TextView
                            android:id="@+id/tv_creat_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical|bottom"
                            android:text="发起时间：2018/09/28  14:23:12"
                            android:textColor="@color/c_55"
                            android:textSize="@dimen/dp_9"
                            android:visibility="visible"
                            tools:ignore="NotSibling" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>


        </LinearLayout>

        <View
            style="@style/horizontal_line"
            android:layout_marginLeft="@dimen/dp_15" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:background="@drawable/white_grey_btn"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_14"
                android:paddingTop="@dimen/dp_14"
                android:text="故障类型："
                android:textColor="@color/c_99"
                android:textSize="@dimen/dp_14"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_handled_fault_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_14"
                android:paddingTop="@dimen/dp_14"
                android:text="电池电量低"
                android:textColor="@color/c_ff42"
                android:textSize="@dimen/dp_15"
                android:textStyle="bold"
                android:visibility="visible" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tv_handled_fault_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:padding="10dp"
                android:src="@drawable/ic_launcher"
                android:text="@string/sure"
                android:textColor="@color/c_ff"
                android:textSize="14dp" />

            <View
                android:id="@+id/middle_line"
                style="@style/horizontal_line" />

            <ImageView
                android:id="@+id/tv_handled_fault_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_handled_fault_one"
                android:clickable="true"
                android:padding="@dimen/dp_10"
                android:src="@drawable/ic_launcher"
                android:textColor="@color/c_ff"
                android:textSize="@dimen/dp_13" />

            <View
                android:id="@+id/line"
                style="@style/horizontal_line" />

        </RelativeLayout>

        <Button
            android:id="@+id/tv_loginBtn"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/btn_ora_14_bg"
            android:text="@string/be_over"
            android:textColor="@color/c_ff"
            android:textSize="@dimen/dp_13"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>