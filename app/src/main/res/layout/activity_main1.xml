<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.jquery.service.android.widgets.TopTitleBar
        android:id="@+id/top_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/tab_home" />

    <FrameLayout
        android:id="@+id/flayout_home"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View style="@style/horizontal_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_height"
        android:background="@color/c_ff"
        android:clickable="true"
        android:orientation="horizontal">

        <CheckedTextView
            android:id="@+id/ct_home"
            style="@style/tab_item"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/home_bg_selected"
            android:text="@string/tab_home"
            android:textAlignment="center"
             />

        <CheckedTextView
            android:id="@+id/ct_category"
            style="@style/tab_item"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/find_bg_selected"
            android:text="@string/tab_fault"
            android:textAlignment="center"
            />


        <CheckedTextView
            android:id="@+id/ct_mine"
            style="@style/tab_item"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/mine_bg_selected"
            android:text="@string/tab_mine"
            android:textAlignment="center"
             />

    </LinearLayout>

</LinearLayout>
