<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_title_bar"></include>

    <com.jquery.service.android.widgets.TopTitleBar
        android:id="@+id/top_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/about_us" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_grey_btn"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_18"
            android:src="@drawable/qwkrom_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:text="@string/app_name"
            android:textSize="@dimen/dp_15"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_20"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/version_code"
                android:textSize="@dimen/dp_13" />

            <TextView
                android:id="@+id/tv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_test_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/white_grey_btn"
        android:orientation="vertical"
        android:padding="@dimen/dp_6">

        <TextView
            android:id="@+id/test_version"
            style="@style/MineHomeText"
            android:text="@string/test_version"
            android:textSize="@dimen/dp_13" />

        <View style="@style/horizontal_line" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_faq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_grey_btn"
        android:orientation="vertical"
        android:padding="@dimen/dp_6">

        <TextView
            android:id="@+id/basic_faq"
            style="@style/MineHomeText"
            android:text="@string/FAQ"
            android:textSize="@dimen/dp_13" />

        <View style="@style/horizontal_line" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_progess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="下载进度为：0"
        android:textColor="#000"
        android:textSize="23sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.118" />

    <TextView
        android:id="@+id/tv_file_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:singleLine="false"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_progess" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1"
        android:background="@drawable/white_grey_btn"
        android:gravity="center|bottom"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_15">

        <TextView
            android:id="@+id/tv_basic_faq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/company_name"
            android:textColor="@color/c_99"
            android:textSize="@dimen/dp_11" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:text="@string/copyright"
            android:textColor="@color/c_99"
            android:textSize="@dimen/dp_11" />
    </LinearLayout>

    <!-- 重庆前卫克罗姆 版权所有

     Copyright @2019-2020-->
</LinearLayout>